<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ap_ssid_label"
        android:layout_width="88dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="112dp"
        android:singleLine="true"
        android:text="WiFi名称:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ap_ssid_text"
        android:layout_width="245dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/user_intput"
        app:layout_constraintBottom_toBottomOf="@+id/ap_ssid_label"
        app:layout_constraintStart_toEndOf="@+id/ap_ssid_label"
        app:layout_constraintTop_toTopOf="@+id/ap_ssid_label"
        app:layout_constraintVertical_bias="0.64" />

    <TextView
        android:id="@+id/ap_bssid_label"
        android:layout_width="88dp"
        android:layout_height="23dp"
        android:layout_marginTop="48dp"
        android:singleLine="true"
        android:text="MAC地址:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintStart_toStartOf="@+id/ap_ssid_label"
        app:layout_constraintTop_toBottomOf="@id/ap_ssid_label" />

    <TextView
        android:id="@+id/ap_bssid_text"
        android:layout_width="245dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/user_intput"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/ap_bssid_label"
        app:layout_constraintStart_toEndOf="@+id/ap_bssid_label"
        app:layout_constraintTop_toTopOf="@+id/ap_bssid_label" />


    <TextView
        android:id="@+id/message"
        android:layout_width="157dp"
        android:layout_height="74dp"
        android:layout_marginBottom="48dp"
        android:gravity="top"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toTopOf="@+id/config_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginStart="4dp" />

    <Button
        android:id="@+id/config_btn"
        android:layout_width="250dp"
        android:layout_height="39dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/login_set"
        android:text="配网"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/password_label"
        android:layout_width="83dp"
        android:layout_height="23dp"
        android:layout_marginTop="48dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="WiFi密码:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintStart_toStartOf="@+id/ap_bssid_label"
        app:layout_constraintTop_toBottomOf="@+id/ap_bssid_label" />


    <EditText
        android:id="@+id/password_text"
        android:layout_width="245dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/user_intput"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/password_label"
        app:layout_constraintStart_toEndOf="@+id/password_label"
        app:layout_constraintTop_toTopOf="@+id/password_label"
        app:layout_constraintVertical_bias="0.6" />


</androidx.constraintlayout.widget.ConstraintLayout>
